{
	"manifest_version": 2,

	"name": "BTRoblox",
	"short_name": "BTR",
	"description": "Better Roblox - Making Roblox better!",
	"version": "2.4.13",
	"author": "AntiBoomz",

	"icons": {
		"128":"res/icon_128.png"
	},

	"applications": {
		"gecko": {
			"id": "btroblox@antiboomz.com",
			"update_url": "https://antiboomz.com/btroblox/updates.json"
		}
	},

	"background": {
		"scripts": [
			"js/common.js",
			"js/background/settings.js",
			"js/background/blogfeed.js",
			"js/background/messaging.js",
			"js/background/groupshout.js",
			"js/background/contextmenu.js"
		]
	},

	"permissions": [
		"*://*.roblox.com/",
		"*://*.rbxcdn.com/",
		"alarms",
		"clipboardWrite",
		"contextMenus",
		"notifications",
		"storage"
	],

	"web_accessible_resources": [
		"js/inject.js",
		"lib/*",
		"css/*",
		"res/*"
	],

	"content_scripts": [
		{
			"matches": ["*://www.roblox.com/*", "*://web.roblox.com/*"],
			"js": [
				"js/common.js",
				"js/utility.js",
				"js/inject.js",
				"js/main.js",
				"js/pages.js",
				"lib/three.min.js",
				"js/rbx/Parser.js",
				"js/rbx/AssetCache.js",
				"js/rbx/Animator.js",
				"js/rbx/Avatar.js",
				"js/rbx/Scene.js",
				"js/rbx/Preview.js",
				"js/rbx/ApiDump.js",
				"js/rbx/Explorer.js"
			],
			"run_at": "document_start",
			"all_frames": true
		}
	]
}