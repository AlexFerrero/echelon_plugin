{
	"manifest_version": 2,

	"name": "BTRoblox",
	"short_name": "BTR",
	"description": "Better Roblox - Making Roblox better!",
	"version": "2.3.2",
	"minimum_chrome_version": "55",

	"icons": {
		"128":"res/icon_128.png"
	},

	"background": {
		"scripts": [
			"js/background/settings.js",
			"js/background/blogfeed.js",
			"js/background/cshandler.js",
			"js/background/groupshout.js",
			"js/background/contextmenu.js"
		],
		"persistent": false
	},
	"permissions": [
		"*://www.roblox.com/",
		"*://m.roblox.com/",
		"*://api.roblox.com/",
		"*://avatar.roblox.com/",
		"*://forum.roblox.com/",
		"*://blog.roblox.com/",
		"*://*.rbxcdn.com/",
		"storage",
		"notifications",
		"alarms",
		"contextMenus"
	],
	"web_accessible_resources": [
		"js/inject.js",
		"css/*",
		"res/*",
		"options.html"
	],
	"content_scripts": [
		{
			"matches": ["*://www.roblox.com/*", "*://forum.roblox.com/*"],
			"js": ["js/utility.js", "js/main.js", "js/pages.js"],
			"css": [],
			"run_at": "document_start",
			"all_frames": true
		}
	]
}