{
	"manifest_version": 2,

	"name": "BTRoblox",
	"short_name": "BTR",
	"description": "Better Roblox - Making Roblox better!",
	"version": "2.3.15",
	"minimum_chrome_version": "55", // Chrome

	"icons": {
		"128":"res/icon_128.png"
	},

	"applications": { // Firefox
		"gecko": { // Firefox
			"id": "btroblox@antiboomz.com", // Firefox
			"update_url": "https://antiboomz.com/btroblox/updates.json" // Firefox
		} // Firefox
	}, // Firefox

	"background": {
		"scripts": [
			"js/common.js",
			"js/background/settings.js",
			"js/background/blogfeed.js",
			"js/background/messaging.js",
			"js/background/groupshout.js",
			"js/background/contextmenu.js"
		]
		,"persistent": false // Chrome
	},

	"permissions": [
		"*://www.roblox.com/",
		"*://web.roblox.com/",
		"*://m.roblox.com/",
		"*://api.roblox.com/",
		"*://avatar.roblox.com/",
		"*://blog.roblox.com/",
		"*://*.rbxcdn.com/",
		"storage",
		"notifications",
		"alarms",
		"clipboardWrite", // Firefox
		"contextMenus"
	],

	"web_accessible_resources": [
		"js/inject.js",
		"lib/*",
		"css/*",
		"res/*"
	],

	"content_scripts": [
		{
			"matches": ["*://www.roblox.com/*", "*://web.roblox.com/*"],
			"js": ["js/common.js", "js/utility.js", "js/main.js", "js/pages.js"],
			"run_at": "document_start",
			"all_frames": true
		}
	]
}